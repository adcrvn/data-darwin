{
  "name": "smarthome-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx -r tsconfig-paths/register src/index.ts",
    "prebuild": "node scripts/combine-schemas.js",
    "build": "npm run prebuild && prisma generate --schema=./prisma/combined-schema.prisma && tsc -p tsconfig.server.json",
    "start": "NODE_ENV=production tsx -r tsconfig-paths/register src/index.ts",
    "lint": "tsc --noEmit",
    "postinstall": "node scripts/combine-schemas.js && prisma generate --schema=./prisma/combined-schema.prisma",
    "db:generate": "node scripts/combine-schemas.js && prisma generate --schema=./prisma/combined-schema.prisma",
    "db:push": "node scripts/combine-schemas.js && prisma db push --schema=./prisma/combined-schema.prisma",
    "db:studio": "node scripts/combine-schemas.js && prisma studio --schema=./prisma/combined-schema.prisma",
    "db:migrate": "node scripts/combine-schemas.js && prisma migrate dev --schema=./prisma/combined-schema.prisma",
    "db:migrate:deploy": "node scripts/combine-schemas.js && prisma migrate deploy --schema=./prisma/combined-schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@prisma/client": "^6.15.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "next": "^16.0.7",
    "prisma": "^6.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/express": "^4.17.21",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5"
  }
}
